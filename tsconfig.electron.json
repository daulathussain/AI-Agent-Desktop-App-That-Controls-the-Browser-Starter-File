{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "electron/**/*",
    "agent/**/*",
    "browser/**/*",
    "llms/**/*",
    "storage/**/*",
    "utils/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist", "ui"]
}
